<p id="notice"><%= notice %></p>

<h1>Announcements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Type</th>
      <th>User</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><div style="width: 60px; height:auto"><%= image_tag(announcement.image, style: "width:100%") if announcement.image.attached? %></div></td>
        <td><%= announcement.content %></td>
        <td><%= announcement.announcement_type %></td>
        <td><%= announcement.user_id %></td>
        <td><%= link_to 'Show', announcement %></td>
        <% if can? :update, @article %>
          <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
        <% end %>
        <% if can? :destroy, @article %>
          <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Announcement', new_announcement_path %><br>
  <%= link_to 'Log out', destroy_user_session_path %>
<% else %>
  <%= link_to 'Sign in', new_user_session_path %>
  <%= link_to 'Sign up', new_user_registration_path %>
<% end %>